<h1>Let's book you a new trip.</h1>


<% if flash[:errors] %>  
<% flash[:errors].each do |error| %>  
<p>    
<%= error %>  
</p>  
<% end %>
<% end %>




<%= form_for(@itinerary) do |f| %>

<%= f.label :destination_id %>
<%= collection_select(:destination_id, @destinations, :id, :name) %>

<%= f.label :salesman_id %>
<%= collection_select(:salesman_id, @salesmen, :id, :name) %> 
<!-- Salesman name should lock based on who's logged in. Check session? -->

<%= f.label :flight_id %>
<%= collection_select(:flight_id, @flights, :id, :flight_number) %>

<%= f.label :hotel_id %>
<%= collection_select(:hotel_id, @hotels, :id, :name) %>


    <%= f.submit %>

<% end %>
