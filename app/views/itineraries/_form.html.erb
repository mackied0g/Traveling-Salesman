<h1>Let's book you a new trip.</h1>


<% if flash[:errors] %>  
    <% flash[:errors].each do |error| %>  
        <p>    
            <%= error %>  
        </p>  
    <% end %>
<% end %>



<%= form_for(@itinerary) do |f| %>

    <%= f.label :destination %>
    <%= f.collection_select :destination_id, @destinations, :id, :location %>

    <!-- Salesman name should lock based on who's logged in. Check session? -->

    <%= f.label :flight %>
    <%= f.collection_select :flight_id, @flights, :id, :flight_number  %>
<!-- 2 flights: chosen in flights, displayed in itinerary -->
    <%= f.label :hotel %>
    <%= f.collection_select :hotel_id, @hotels, :id, :name %>

        
    
    
    <%= f.submit %>

<% end %>
