<h1>Login Form</h1>


<% if flash[:errors] %>  
  <% flash[:errors].each do |error| %>  
    <p>    
      <%= error  %>  
    </p>  
  <% end %>
<% end %>




<%= form_tag "/login" do %>
  <%= label_tag :email %>
  <%= email_field_tag :email %>

  <%= label_tag :password %>
  <%= password_field_tag :password %>

  <%= submit_tag "Login" %>
  
<% end %>