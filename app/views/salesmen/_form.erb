<h1> Create a new account. </h1>

<% if flash[:errors] %>  
<% flash[:errors].each do |error| %>  
<p>    
<%= error %>  
</p>  
<% end %>
<% end %>


<%= form_for(@salesman) do |f| %>

    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :email %>
    <%= f.email_field :email %>

    <%= f.label :password %>
    <%= f.password_field :password %>

    <%= f.label :company %>
    <%= f.text_field :company %>

<br>
<br>
    <%= f.submit %>
<% end %>
